<style>
    .product-image {
        max-width: 100%;
        max-height: 400px;
        display: block;
        margin: 0 auto;
        border: 2px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out;
    }

        .product-image:hover {
            transform: scale(1.05);
        }

    .product-details {
        margin-top: 20px;
    }

    .price {
        font-size: 28px;
        font-weight: bold;
        color: #4caf50;
    }

    .description {
        margin-top: 20px;
        color: #555;
    }

    .quantity-input {
        width: 40px;
        text-align: center;
    }

    .quantity-control-btn {
        width: 20px;
        padding: 5px;
        font-size: 14px;
    }

    #buy-now-btn {
        background-color: #4caf50;
        color: #fff;
        border: none;
        padding: 10px 20px;
        font-size: 18px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease-in-out;
    }

        #buy-now-btn:hover {
            background-color: #45a049;
        }
</style>

<div class="container mt-5 mx-2">
    <div class="row">
        <div class="col-md-6">
            <!-- Product Image -->
            <img src="@Url.Content($"~/uploads/{@Model.PictureUrl}")" alt="Product Image" class="product-image img-fluid rounded">
        </div>
        <div class="col-md-6">
            <!-- Product Details -->
            <div class="product-details">
                <h2>@Model.Name</h2>
                <p class="price">$@Model.Price</p>
                <p class="description">@Model.Description</p>
                <p>Brand: @Model.ProductBrand.Name</p>
                <p>Type: @Model.ProductType.Name</p>

                <!-- Quantity input and Buy Now button -->
                <div class="input-group mt-3" style="width: 100px;">
                    <div class="input-group-prepend">
                        <button class="btn btn-outline-secondary quantity-control-btn" type="button" id="quantity-minus">-</button>
                    </div>
                    <input type="text" class="form-control quantity-input" value="1" id="quantity" readonly>
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary quantity-control-btn" type="button" id="quantity-plus">+</button>
                    </div>
                </div>
                <button class="btn btn-success mt-3" id="buy-now-btn">Buy Now</button>
                <!-- Add to Cart button can be added similarly -->
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS and Popper.js scripts -->
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>

<script>
    // Add quantity increment and decrement functionality
    $(document).ready(function () {
        $("#quantity-minus").click(function () {
            updateQuantity(-1);
        });

        $("#quantity-plus").click(function () {
            updateQuantity(1);
        });

        function updateQuantity(change) {
            var quantityInput = $("#quantity");
            var currentQuantity = parseInt(quantityInput.val());
            var newQuantity = currentQuantity + change;

            if (newQuantity > 0) {
                quantityInput.val(newQuantity);
            }
        }
    });
    $("#buy-now-btn").click(function () {
        var quantity = $("#quantity").val();
        alert("Buy Now clicked with quantity: " + quantity);
    });
</script>
