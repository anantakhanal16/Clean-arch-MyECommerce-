<style>
    /* Consolidated and optimized styles */
    .form-outline, .form-label, .form-control {
        display: block;
        text-align: start;
        float: left;
        margin-right: 20px;
    }

    .form-control {
        z-index: 4;
        position: relative;
    }

    .vh-100 {
        height: 100vh;
    }

    .container {
        padding: 5rem 0;
    }

    .card {
        border-radius: 1rem;
    }

    .card-body {
        padding: 5rem;
        text-align: center;
    }

    .btn-primary, .btn-google {
        background-color: #dd4b39;
    }

    .btn-block {
        display: block;
        width: 100%;
    }

    .btn-facebook {
        background-color: #3b5998;
    }
</style>
<section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>
                                <form class="mx-1 mx-md-4" method="post" action="/Account/SignupComplete">

                                    <div class="form-outline mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example1c">Your Name</label>
                                            <input type="text" id="form3Example1c" name="DisplayName" class="form-control" required />
                                           
                                        </div>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example3c">Your Email</label>
                                            <input type="email" id="form3Example3c" name="Email" class="form-control" required />
                                          
                                        </div>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example4c">Password</label>
                                            <input type="password" id="form3Example4c" name="Password" class="form-control" required />
                                       
                                        </div>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label " for="form3Example5c">Repeat your password</label>
                                            <input type="password" id="form3Example5c" name="PasswordConfirm" class="form-control" required />
 
                                        </div>
                                    </div>

                                    <div class="form-check d-flex justify-content-center mb-5">
                                        <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3c" required />
                                        <label class="form-check-label" for="form2Example3c">
                                            I agree to all statements in <a href="#!">Terms of service</a>
                                        </label>
                                    </div>
                                    @Html.AntiForgeryToken();
                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" class="btn btn-primary btn-lg">Register</button>
                                    </div>

                                </form>
                            </div>

                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                     class="img-fluid" alt="Sample image">
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
