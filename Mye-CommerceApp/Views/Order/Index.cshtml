@{
    @model IEnumerable<Mye_CommerceApp.Dtos.OrderList>
    var count = 0;
}

<div class="container mt-5 mx-5">
    <div class="row">
        <div class="com-md-8">
            <h2 class="text-center text-primary">Your Orders</h2>
            <hr />

            <div class="table-responsive">
                <table class="table table-striped table-bordered bg-light mt-4">
                    <thead class="thead-dark">
                        <tr>
                            <th style="font-weight: bold;">S.No</th>
                            <th style="font-weight: bold;">Order Date</th>
                            <th style="font-weight: bold;">Shipping Address</th>
                            <th style="font-weight: bold;">Total Amount</th>
                            <th style="font-weight: bold;">Details</th>
                        </tr>
                    </thead>

                    <tbody>

                        @foreach (var order in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@order.DateTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                <td>@order.ShippingAddress</td>
                                <td class="text-success font-weight-bold">@order.TotalAmount.ToString("C")</td>
                                <td>
                                    <a class="btn btn-primary" href="@Url.Action("OrderDetails", "Order", new { OrderId = order.OrderId })">View Details</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        </div>
   
  
</div>
