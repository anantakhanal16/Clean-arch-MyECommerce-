@{
    Layout = "AdminLayout";
}


@using Mye_CommerceApp.Dtos;

    <!-- Add Product Brand Button -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addProductBrandModal">
        Add Product Brand
    </button>

    <!-- Add Product Brand Modal -->
    <div class="modal fade" id="addProductBrandModal" tabindex="-1" role="dialog" aria-labelledby="addProductBrandModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addProductBrandModalLabel">Add Product Brand</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- Product Brand Form -->


                <form id="productBrandForm" method="post" action="/ProductBrand/AddProductBrandComplete">

    <div class="form-group">
        <label for="productBrandName">Product Brand Name</label>
        <input type="text" class="form-control" id="productBrandName" name="brandName" required>
    </div>
    
    @Html.AntiForgeryToken()

    <button type="submit" class="btn btn-primary">Add Product Brand</button>
</form>

                </div>
            </div>
        </div>
    </div>
 

    <!-- Product Brand Table -->
    <div class="mt-4" id="productBrandPage">
        <h2>Product Brand List</h2>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">S.N</th>
                    <th scope="col">Product Brand Name</th>
                </tr>
            </thead>
            <tbody id="productBrandTableBody">
            @if (Model != null)
            {
                int count = 1;
                @foreach (var products in Model)
                {
                    <tr>
                        <td>@count</td>
                        <td>@products.Name</td>
                    </tr>
                    count++ ;
                }
                  
            }
            <!-- Product Brand rows will be dynamically added here -->
            </tbody>
        </table>
    </div>

    <style>
        /* Styles for the Product Brand page */
        #productBrandPage {
            padding: 20px;
            background-color: #f8f9fa;
        }

            #productBrandPage .modal-content {
                border-radius: 10px;
            }

            #productBrandPage .modal-header {
                background-color: #007bff;
                color: white;
                border-radius: 10px 10px 0 0;
            }

            #productBrandPage .modal-body {
                border-radius: 0 0 10px 10px;
            }

            #productBrandPage .btn-primary {
                background-color: #007bff;
                border-color: #007bff;
            }

                #productBrandPage .btn-primary:hover {
                    background-color: #0056b3;
                    border-color: #0056b3;
                }

            #productBrandPage table {
                background-color: white;
                border-radius: 10px;
            }

            #productBrandPage th, #productBrandPage td {
                text-align: center;
            }
    </style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Handle form submission for Product Brand
        document.getElementById('productBrandForm').addEventListener('submit', function (event) {
            // event.preventDefault();

            // Get form values for Product Brand
            const productBrandName = document.getElementById('productBrandName').value;

            // Add product brand to table
            const productBrandTableBody = document.getElementById('productBrandTableBody');
            const newRow = productBrandTableBody.insertRow();
            newRow.innerHTML = `<td>${productBrandName}</td>`;
           
            // Clear form values
            // document.getElementById('productBrandName').value = '';

            // Close modal
            $('#addProductBrandModal').modal('hide');
            $('body').removeClass('modal-open');
            $('.modal-backdrop').remove();
        });
    });
</script>


